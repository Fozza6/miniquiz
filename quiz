#Python

# Answer VAR
right = ("Correct Answer")
wrong = ("Incorrect Answer")


print("Welcome to Fozza's Quiz!")

playr = input("Would you like to play my quiz? ")
if playr.lower() != "yes":
    quit()

print("Great! Before we start what is your name?")
name = input("What is your name? ")
print ("Hello, ",  name)

print("\n Now that you have entered your name lets begin!")
score = 0

#Questions and Answers
answer = input("\n What is my User name? ")
if answer.lower() == "fozza":
    print(right)
    score += 1
else:
    print(wrong)

answer = input("\n Which country am i from? ")
if answer.lower() == "england":
    print(right)
    score += 1
else:
    print(wrong)

#Score
print("\n You got " + str(score) + " Questions correct!")
